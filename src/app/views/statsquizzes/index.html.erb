<!--formatting and information for the text to provide hover effects-->
<section class="news pt-0 bg-white ">
  <div class="image-block-inner">
  <div class="card mt-md-5 my-5 shadow-lg p-3 mb-5 rounded", style="background-color: #301934"> 
    <div class="row ">
    <div class="text-center col-md-8 mx-auto text-white"> 
    <hr class="divider border border-5"/>
    <h2 class="mx-4 my-0 text-center">Statistics and Facts : </h2>  <br>
      <%= link_to 'Take Quiz', new_statsquiz_path, class:"btn btn-outline image-block-inner text-dark", style: "background-color: white" %> 
    <hr class="divider border border-5"/> 
    </div></div>
    <ul class="row d-lg-flex list-unstyled image-block justify-content-center px-lg-0 mx-lg-0">
      <li class="col-lg-4 col-md-5 image-block full-width p-3">
        <div class="image-block-inner", style="background-color: white ">
          <a class="mh-100 text-dark" >
            <!--<img src="" alt="Picture1" class="img-responsive w-100"></a>-->
          <span class="hp-posts-cat">1. </span>
          <p class="mt-3"><a class="text-dark ">On average, nearly 20 people per minute are physically abused by an 
            intimate partner in the United States. During one year, this equates to more than 10 million women and men.</a></p>
          <!--  <p></p> -->
        </div> <!-- end of box outline -->
      </li>
      <li class="col-lg-4 col-md-5 image-block full-width p-3">
        <div class="image-block-inner", style="background-color: white">
          <a class="mh-100 text-dark">
            <!--<img src="" alt="Picture2" class="img-responsive w-100"></a> -->
          <span class="hp-posts-cat">2. </span>
          <p class="mt-3"><a class= "text-dark">1 in 4 women and 1 in 9 men experience severe intimate partner physical violence, 
          intimate partner contact sexual violence, and/or intimate partner stalking with impacts such as injury, fearfulness, post-traumatic stress disorder, use of victim services, contraction of sexually transmitted diseases etc.</a></p>
        </div> <!-- end of box outline -->
      </li>
      <li class="col-lg-4 col-md-5 image-block full-width p-3">
        <div class="image-block-inner", style="background-color: white">
          <a class="mh-110 text-dark">
            <!--<img src="" alt="Picture3" class="img-responsive w-100"></a> -->
          <span class="hp-posts-cat">3. </span>
          <p class="mt-3"><a class= "text-dark" >1 in 7 women and 1 in 25 men have been injured by an intimate partner.</a></p>
        </div> <!-- end of box outline -->
      </li> 
      <li class="col-lg-4 col-md-5 image-block full-width p-3">
        <div class="image-block-inner", style="background-color: white ">
          <a class="mh-110 text-dark">
            <!--<img src="" alt="Picture3" class="img-responsive w-100"></a> -->
          <span class="hp-posts-cat">4. </span>
          <p class="mt-3"><a class= "text-dark">1 in 10 women have been raped by an intimate partner. Data is unavailable on male victims.</a></p>
        </div> <!-- end of box outline --> 
      <li class="col-lg-4 col-md-5 image-block full-width p-3">
        <div class="image-block-inner", style="background-color: white ">
          <a class="mh-110 text-dark">
            <!--<img src="" alt="Picture3" class="img-responsive w-100"></a> -->
          <span class="hp-posts-cat">5. </span>
          <p class="mt-3"><a class= "text-dark" >Only 34% of people who are injured by intimate partners receive medical care for their injuries.</a></p>
        </div> <!-- end of box outline -->  
        <li class="col-lg-4 col-md-5 image-block full-width p-3">
        <div class="image-block-inner", style="background-color: white ">
          <a class="mh-110 text-dark">
            <!--<img src="" alt="Picture3" class="img-responsive w-100"></a> -->
          <span class="hp-posts-cat">6. </span>
          <p class="mt-3"><a class= "text-dark" >On a typical day, there are more than 20,000 phone calls placed to domestic violence hotlines nationwide.</a></p>
        </div> <!-- end of box outline -->
      </li>
    </ul>
    <%= link_to 'Back', href= home_DV_path,  class:"btn btn-outline image-block-inner text-dark", style: "background-color: white" %> 
  </div> 
</section> 

