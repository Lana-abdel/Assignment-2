<p id="notice"><%= notice %></p>

<h1>All Survey Responses</h1>
<div class = "container center">
<table class = "table">
  <thead>
    <tr>
      <th scope="col">Age</th> 
      <th scope="col">Gender</th>
      <th scope="col">Peferred contact</th>
      <th scope="col">Victim or knows a victim of DV?</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @surveys.each do |survey| %>
      <tr style="white-space:nowrap">
        <td><%= survey.answer_1 %></td> 
        <td><%= survey.answer_2 %></td>
        <td><%= survey.answer_3 %></td>
        <td><%= survey.answer_4 %></td>
        <td><%= link_to 'Show', survey,  class:"btn btn-outline image-block-inner text-dark", style: "background-color: white"  %></td>
        <td><%= link_to 'Delete', survey, method: :delete, data: { confirm: 'Are you sure?' },  class:"btn btn-outline image-block-inner text-dark", style: "background-color: white"  %></td>
      </tr>
    <% end %>
  </tbody>
</table>
</div>
<br>
